    <style name="buttonReview" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_review</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:paddingLeft">@dimen/no_padding</item>
        <item name="android:paddingRight">@dimen/no_padding</item>
    </style>

    <!-- 지도 버튼: 현재 위치 -->
    <style name="buttonMapCurrentLocation" parent="@android:style/Widget.ImageButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_map_current_location</item>
        <item name="android:src">@drawable/icon_current_location</item>
    </style>

    <!-- 리스트 뷰: 기본 셀렉터 -->
    <style name="ListSelector" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/selector</item>
        <item name="android:padding">@dimen/list_view_item_padding</item>
    </style>

    <!-- 리스트 뷰: 카드 셀렉터 -->
    <style name="ListSelectorCard" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/card</item>
    </style>
</resources>