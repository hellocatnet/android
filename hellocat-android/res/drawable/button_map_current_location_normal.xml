<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#ff999999" />

            <corners android:radius="2dp" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <solid android:color="#00999999" />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/icon_current_location" />
    </item>

</layer-list>